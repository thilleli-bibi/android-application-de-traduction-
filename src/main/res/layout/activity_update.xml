<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_update"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choisir un mot Ã  modifier:" />

    <Spinner
        android:id="@+id/sp_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Traduction: " />

        <EditText
            android:id="@+id/ed_traduction2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>

    <Button
        android:id="@+id/b_traduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="ajouterTraduction"
        android:text="Ajouter une traduction" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image externe: " />

        <EditText
            android:id="@+id/ed_image_web2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />

    </LinearLayout>

    <Button
        android:id="@+id/b_image_web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="ajouterImageWeb"
        android:text="Ajouter une image du web" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image appareil: " />

        <TextView
            android:id="@+id/uriAppareil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b_chercher_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="chercherImage"
            android:text="Charger une image de l'appareil" />

        <Button
            android:id="@+id/b_image_appareil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="ajouterImageAppareil"
            android:text="Ajouter l'image" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Son: " />

        <TextView
            android:id="@+id/uriSon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b_chercher_son"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="chercherSon"
            android:text="Chercher un son de l'appareil" />

        <Button
            android:id="@+id/b_son"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="ajouterSon"
            android:text="Ajouter le son" />
    </LinearLayout>

</LinearLayout>