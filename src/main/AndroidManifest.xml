<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="fr.bibi.apprentissagelangue">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity_liste_apprentissage"></activity>
        <activity android:name=".activity_apprentissage_categorie" />
        <activity android:name=".activity_choix_apprentissage" />
        <activity android:name=".activity_test_couple_mots" />
        <activity android:name=".activity_test_liste_apprentisssage" />
        <activity android:name=".activity_test_libre" />
        <activity android:name=".activity_test" />
        <activity android:name=".activity_update" />
        <activity android:name=".activity_suppression" />
        <activity android:name=".activity_ajout" />
        <activity android:name=".activity_apprentissage" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>